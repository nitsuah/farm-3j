# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ================================
# Application
# ================================
NODE_ENV=development # 'development' or 'production'
PORT=3000
APP_URL=http://localhost:3000 # Base URL of your application

# ================================
# Database
# ================================
DATABASE_URL=postgresql://user:password@localhost:5432/dbname # Connection string

# ================================
# Authentication & Security
# ================================
JWT_SECRET=your_jwt_secret_here # Secret key for signing JWTs
SESSION_SECRET=your_session_secret_here # Secret key for session management

# ================================
# External APIs
# ================================
# Example:
# WEATHER_API_KEY=your_weather_api_key

# ================================
# Runtime Configuration
# ================================
LOG_LEVEL=info # 'debug', 'info', 'warn', 'error'
ENABLE_SOME_FEATURE=true # Enable or disable a specific feature